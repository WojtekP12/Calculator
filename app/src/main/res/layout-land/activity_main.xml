<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:height="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:layout_span="7"
            android:textSize="32dp"
            android:id="@+id/Equation" />
    </TableRow>

    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button style="@style/ButtonStyleHorizontal"
            android:text="sin"
            android:id="@+id/SinButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="ln"
            android:id="@+id/LnButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="7"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/SevenButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="8"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/EightButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="9"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/NineButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="&lt;--"
            android:id="@+id/BackSpaceButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="C"
            android:id="@+id/ClearButton"></Button>
    </TableRow>
    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button style="@style/ButtonStyleHorizontal"
            android:text="cos"
            android:id="@+id/CosButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="log"
            android:id="@+id/LogButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="4"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/FourButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="5"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/FiveButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="6"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/SixButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="+"
            android:id="@+id/PlusButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="-"
            android:id="@+id/MinusButton"></Button>
    </TableRow>
    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button style="@style/ButtonStyleHorizontal"
            android:text="x^y"
            android:id="@+id/PowerButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="e"
            android:id="@+id/EulerButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="1"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/OneButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="2"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/TwoButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="3"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/ThreeButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="/"
            android:id="@+id/DivistionButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="*"
            android:id="@+id/MultiButton"></Button>
    </TableRow>
    <TableRow android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button style="@style/ButtonStyleHorizontal"
            android:text="x^2"
            android:id="@+id/Square"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:text="sqrt"
            android:id="@+id/SqrtButton"></Button>
        <Button style="@style/ButtonStyleHorizontal"
            android:layout_span="2"
            android:text="0"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/ZeroButton"></Button>

        <Button style="@style/ButtonStyleHorizontal"
            android:text="."
            android:layout_column="4"
            android:backgroundTint="@android:color/darker_gray"
            android:id="@+id/ComaButton"></Button>

        <Button style="@style/ButtonStyleHorizontal"
            android:text="="
            android:layout_column="5"
            android:id="@+id/EqualsButton"
            android:layout_span="2"></Button>
    </TableRow>
</TableLayout>
